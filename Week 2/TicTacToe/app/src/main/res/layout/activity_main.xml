<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:id="@+id/tlButton"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="50dp"
            android:layout_gravity="bottom|left|right|top" />

        <Button

            android:layout_width="108dp"
            android:layout_height="108dp"
            android:id="@+id/tmButton"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="50dp"
            android:layout_gravity="bottom|left|right|top"/>

        <Button
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:id="@+id/trButton"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="50dp"
            android:layout_gravity="bottom|left|right|top"/>

        <Button
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:id="@+id/mlButton"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="50dp"
            android:layout_gravity="bottom|left|right|top"/>

        <Button
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:id="@+id/mmButton"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="50dp"
            android:layout_gravity="bottom|left|right|top"/>

        <Button
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:id="@+id/mrButton"
            android:layout_row="1"
            android:layout_column="2"
            android:textSize="50dp"
            android:layout_gravity="bottom|left|right|top"/>

        <Button
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:id="@+id/blButton"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="50dp"
            android:layout_gravity="bottom|left|right|top"/>

        <Button
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:id="@+id/bmButton"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="50dp"
            android:layout_gravity="bottom|left|right|top"/>

        <Button
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:id="@+id/brButton"
            android:layout_row="2"
            android:layout_column="2"
            android:textSize="50dp"
            android:layout_gravity="bottom|left|right|top"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="O = press || X = long press"
            android:id="@+id/winnerText"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:text="@string/resetButtonText"
            android:id="@+id/resetButton"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/winText"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center" />
    </GridLayout>

</RelativeLayout>
